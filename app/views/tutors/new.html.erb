</nav>
    
<div class="large_content" id="large_content">
    <h1> Sign Up</h1>
</div>

    
<div class="row">
  
    <div  class="col-md-6 col-md-offset-3">
    <%= form_for(@tutor_person, url: tutorsignup_path) do |f| %>
      <%= render 'shared/error_messages_tutor_people' %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Joe Falcon",class: 'form-control' %>
        
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "example@gmail.com", class: 'form-control' %>
        
        <%= f.label :Id_Number %>
        <%= f.text_field :id_num, placeholder: "#123456", class: 'form-control' %>
        
        <%= f.label :grade %>
        <select class = "form-control" name="Contact[email_provider]">
          <option>9</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
        </select>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <br>
        <%= f.label :password_confirmation, "Re-enter password" %>
        <%= f.password_field :password_confirmation, class: 'form-control', id: 'bottominput' %>
  
        <%= f.submit "Create my account", class: "btn btn-primary", id: "animatedbutton" %>
    <% end %>
   
  </div>
</div>

